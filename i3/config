set $base0A #f4bf75
set $base0B #a6e22e
set $base0C #a1efe4
set $base0D #66d9ef
set $base0E #ae81ff
set $base0F #cc6633

# window colors
#                       border    background  text     indicator
client.focused          $base0D   $base0D     $base00  $base0B
client.focused_inactive $base02   $base02     $base03  $base01
client.unfocused        $base01   $base01     $base03  $base01
client.urgent           $base02   $base08     $base07  $base08


# Top Bar to hold status information - May be updated to use Polybar in
# future!
bar {
    # status_command i3status
    tray_output primary
    status_command i3blocks -c /home/sam/.config/i3/i3blocks.conf
    id status-bar
    workspace_buttons no

    colors {
      separator $base03
      background $base01
      statusline $base05
      focused_workspace $base0C $base0D $base00
      active_workspace $base02 $base02 $base07
      inactive_workspace $base01 $base01 $base03
      urgent_workspace $base08 $base08 $base07
   }
   position top
}

# Bottom Bar to hold workspace Buttons only
bar {
    tray_output none
    id workspace-bar
    workspace_buttons yes

    colors {
      separator $base03
      background $base01
      statusline $base05
      focused_workspace $base0C $base0D $base00
      active_workspace $base02 $base02 $base07
      inactive_workspace $base01 $base01 $base03
      urgent_workspace $base08 $base08 $base07
   }
   position bottom
}

# Default Workspaces for various applications
assign [class="[Ss]potify"] $workspace10
assign [class="Google-chrome"] $workspace3
assign [title="kitty"] $workspace1
assign [class="skypeforlinux"] $workspace9
assign [class="discord"] $workspace9

# Attempt at a screenshot utility
bindsym --release Print exec --no-startup-id --release \
  "shutter -f -o ~/Pictures/screenshots/`date +%Y-%m-%d_%H.%M.%S`.png"
bindsym --release $mod+Print exec --no-startup-id --release \
  "shutter -a -o ~/Pictures/screenshots/`date +%Y-%m-%d_%H.%M.%S`.png"
bindsym --release $mod+Shift+Print exec --no-startup-id \
  "shutter -s -o ~/Pictures/screenshots/`date +%Y-%m-%d_%H.%M.%S`.png"

# Volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl \
  set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl \
  set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl \
  set-sink-mute @DEFAULT_SINK@ toggle # mute sound
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
# I don't have back next keys curretly so I use home and mail...
bindsym XF86Mail exec playerctl next
bindsym XF86HomePage exec playerctl previous

# I want pretty GUI transitions and stuff!
exec --no-startup-id compton -f

# I also want to get synergy, chrome & a terminal to start on login exec --no-startup-id synergy exec google-chrome
exec spotify
exec kitty
exec --no-startup-id shutter --min_at_startup

# I like numlock...
exec --no-startup-id numlockx on

# Start Corporate Lan ethernet & Network Manager Applet
exec --no-startup-id nm-applet
exec nmcli connection up corpLan
exec --no-startup-id gnome-settings-daemon

