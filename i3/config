assign [class="Google-chrome"] $workspace3
assign [class="Gnome-terminal"] $workspace1
assign [class="skypeforlinux"] $workspace9

# Attempt at a screenshot utility
bindsym --release Print exec --no-startup-id gnome-screenshot -c -f ~/Pictures/screenshots/`date +%Y-%m-%d_%H.%M.%S`.png
bindsym --release $mod+Print exec --no-startup-id gnome-screenshot -w -c -f ~/Pictures/screenshots/`date +%Y-%m-%d_%H.%M.%S`.png
bindsym --release $mod+Shift+Print exec --no-startup-id gnome-screenshot -a -c -f ~/Pictures/screenshots/`date +%Y-%m-%d_%H.%M.%S`.png


